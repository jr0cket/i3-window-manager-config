# start a terminal
bindsym $mod+Return exec uxterm -fn '-misc-fixed-medium-r-normal--20-200-75-75-c-100-iso8859-1'


# start firefox - i for internet
bindsym $mod+i exec firefox


# kill focused window
bindsym $mod+Shift+q kill

## App Launching 
# start dmenu (a program launcher)
bindsym $mod+Shift+d exec dmenu_run -i -p 'jr0cket' -fn 'Ubuntu:bold:pixelsize=16' -sb 'purple'
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -fn 'Ubuntu Mono-16' -sb 'purple'"

